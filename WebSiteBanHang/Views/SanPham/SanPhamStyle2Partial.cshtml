@model IEnumerable<WebSiteBanHang.Models.SanPham>

@foreach (var item in Model.Take(1))
{
    <div class="col-md-2 grid-top">
        <a href="@Url.RouteUrl("XemChiTiet",new { @id=item.MaSP,@tensp=item.TenSP})" class="b-link-stripe b-animate-go  thickbox">
            <img class="img-responsive" src="@Url.Content("~/Content/HinhAnhSP/" +Model.ElementAt(0).HinhAnh)" alt="">
            <div class="b-wrapper">
                <h3 class="b-animate b-from-top top-in   b-delay03 ">
                    <span>@Html.Raw(Model.ElementAt(0).CauHinh)</span>
                </h3>
            </div>
        </a>
    </div>


    <div class="col-md-2 grid-top">
        <a href="@Url.RouteUrl("XemChiTiet",new { @id=item.MaSP,@tensp=item.TenSP})" class="b-link-stripe b-animate-go  thickbox">
            <img class="img-responsive" src="@Url.Content("~/Content/HinhAnhSP/" +Model.ElementAt(2).HinhAnh)" alt="">
            <div class="b-wrapper">
                <h3 class="b-animate b-from-top top-in2   b-delay03 ">
                    <span>@Html.Raw(Model.ElementAt(2).CauHinh)</span>
                </h3>
            </div>
        </a>
    </div>

    <div class="col-md-2 grid-top">
        <a href="@Url.RouteUrl("XemChiTiet",new { @id=item.MaSP,@tensp=item.TenSP})" class="b-link-stripe b-animate-go  thickbox">
            <img class="img-responsive" src="@Url.Content("~/Content/HinhAnhSP/" +Model.ElementAt(3).HinhAnh)" alt="">
            <div class="b-wrapper">
                <h3 class="b-animate b-from-top top-in2   b-delay03 ">
                    <span>@Html.Raw(Model.ElementAt(3).CauHinh)</span>
                </h3>
            </div>
        </a>
       
    </div>

}
<div class="clearfix"> </div>

      

      

