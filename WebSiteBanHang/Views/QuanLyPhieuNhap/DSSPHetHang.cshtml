@using WebSiteBanHang.Models;
@model IEnumerable<SanPham>

@{
    ViewBag.Title = "DSSPHetHang";
    Layout = "~/Views/Layout/AdminLayout.cshtml";

    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 10);
}
<h2>DANH SÁCH HÀNG SẮP HẾT</h2>
<hr />
<style>
    table, th, td {
        border: 2px solid black;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        text-align: center;
    }
</style>
<table style="width:100%">
    
    @grid.GetHtml(
    tableStyle: "gridTable",
    headerStyle: "gridHead",
    footerStyle: "gridFooter",
    rowStyle: "gridRow",
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
    grid.Column("MaSP", "Tên sản phẩm"),
    grid.Column("TenSP", "Tên SP"),
    grid.Column("SoLuongTon", "Số lượng còn lại"),
    grid.Column("DonGia", "Đơn giá"),
    //grid.Column("MoTa", "Mô tả", format: p => Html.Raw(p.MoTa)),
    grid.Column("HinhAnh", "Hình ảnh", format: p => Html.Raw("<img src=\"../Content/HinhAnhSP/" + p.HinhAnh + "\" style=\"height:100px;width:150px\">")),
    grid.Column(format: p => Html.ActionLink("Nhập hàng", "NhapHangDon", new { id = p.MaSP }, new { @target = "_blank" }))
    )
)
</table>
